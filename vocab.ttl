						rdfs:range skos:Concept.

lp:hasName	a	owl:ObjectProperty;
  rdfs:comment "Links a place to some name, used to mention it."@en, "Lie un lieu à un nom, utilisé pour le désigner."@fr;
  rdfs:isDefinedBy <http://pleiades.stoa.org/places/vocab>;
  rdfs:label "has name"@en, "a pour nom"@fr;
  rdfs:domain lp:Place;
  rdfs:range lp:Name.
						
lp:hasLocation	a	owl:ObjectProperty;
  rdfs:comment "Links a place to some location, used to describe its position in space."@en, "Lie un lieu à une localisation, utilisée pour décrire sa position dans l'espace."@fr;
  rdfs:isDefinedBy <http://pleiades.stoa.org/places/vocab>;
